public class Main {

    public static void main(String[] args) {
        
    }

    static boolean binarySearch (int [] arr, int x, int l, int r) {
        if(r < l)
            return false;
        int m = l+(r-l)/2;
        if (arr[m] == x)
            return true;
        if(arr[m] < x)
            return binarySearch(arr, x, m+1, r);
        return binarySearch(arr, x, l, m-1);
        
        }
    
    }
